#include<stdio.h>
int main()
{
    int n=5;
    int a,b,c;
    int i=5;

    for(a=1;a<=n;a++)
    {
        for(b=i;b>0;b--)
        {
            printf(" ");
        }
        printf("/");
        for(c=2;c<2*a;c++)
        {
            printf(" ");
        }
        printf("\\");
        printf("\n");
        printf("\n");
        i--;
    }
    return 0;
}
